#:kivy 1.10.0

<CustButton@Button>:
    font_size: 13
    color: 0, 0, 0, 1
    background_normal: ''
    background_down: 'img\light_grey.png'
    background_color: 1, 1, 1, 1
    size_hint: .16, .08

<FloatLayout>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size 
    id: display

    Label:
        font_size: 32
        color: 0, 0, 0, 1
        text: "Weather App"
        pos_hint: {"center_x": .5, "center_y": .9}
    CustButton:
        text: "Check Weather"
        pos_hint: {"center_x": .5, "center_y": .7}
        on_press: display.get_weather_data()
    Label:
        font_size: 15
        color: 0, 0, 0, 1
        text: ""
        pos_hint: {"center_x": .4, "center_y": .75}