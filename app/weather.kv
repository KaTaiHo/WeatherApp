#:kivy 1.10.0

<CustButton@Button>:
    font_size: 18
    color: 1, 1, 1, 1
    background_normal: ''
    background_down: 'img\light_grey.png'
    background_color: 0, 0, 0, 0
    size_hint: .3, .08

<FloatLayout>:
    id: display

    Label:
        font_size: 32
        text: "Weather App"
        pos_hint: {"center_x": .5, "center_y": .9}
    CustButton:
        text: "Check Weather"
        pos_hint: {"center_x": .5, "center_y": .8}
        on_press: display.get_weather_data()
    Label:
        font_size: 16
        text: ""
        pos_hint: {"center_x": .4, "center_y": .75}
    Label:
        font_size: 16
        text: root.current_description
        pos_hint: {"center_x": .5, "center_y": .7}
    Label:
        font_size: 16
        text: root.temp
        pos_hint: {"center_x": .5, "center_y": .65}
    Label:
        font_size: 16
        text: root.temp_hi
        pos_hint: {"center_x": .5, "center_y": .6}
    Label:
        font_size: 16
        text: root.temp_lo
        pos_hint: {"center_x": .5, "center_y": .55}
    Label:
        font_size: 16
        text: root.wind
        pos_hint: {"center_x": .5, "center_y": .45}
    Label:
        font_size: 16
        text: root.humidity
        pos_hint: {"center_x": .5, "center_y": .4}
    Label:
        font_size: 16
        text: root.recommendation
        pos_hint: {"center_x": .5, "center_y": .35}



